<% if content.errors.any? %>
  <%= content.errors.full_messages.join(', ') %>
<% end %>

<%= form_with(model: content, local: true) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :tags %>
    <%= f.select :tags, options_for_select(current_user.tags.pluck(:name), content.tags.pluck(:name)), {}, { class: 'tagging', multiple: 'multiple', style: 'width: 50%' }%>

    <%= f.submit %>
<% end %>
