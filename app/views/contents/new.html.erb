<h1> Conteudos </h1>

<% if @content.errors.any? %>
  <%= @content.errors.full_messages.join(', ') %>
<% end %>

<%= form_with model: @content, local: true, url: contents_path do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit %>
<% end %>